<h1>Products</h1>

<% %w(xlsx xls csv).each do |ext| %>
  <%= link_to "Download as .#{ext.to_s}", products_path(format: ext.to_sym), data: {turbolinks: false} %>
<% end %>

<table id="products">
  <tr>
    <th>Product Name</th>
    <th>Release Date</th>
    <th>Price</th>
  </tr>
<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.released_on.strftime("%B %e, %Y") %></td>
    <td><%= number_to_currency(product.price) %></td>
  </tr>
<% end %>
</table>
